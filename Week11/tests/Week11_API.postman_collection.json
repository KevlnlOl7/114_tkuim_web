{
	"info": {
		"_postman_id": "week11-signup-system",
		"name": "Week 11",
		"description": "MongoDB CRUD 與分頁測試",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. 建立報名 (自動抓取ID)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"",
							"// 檢查是否成功",
							"if (pm.response.code === 201) {",
							"    if (jsonData.id) {",
							"        // 設定 Collection Variable",
							"        pm.collectionVariables.set(\"current_id\", jsonData.id);",
							"        console.log(\"成功抓取 ID: \" + jsonData.id);",
							"        pm.test(\"ID 已自動儲存\", function() {",
							"            pm.expect(jsonData.id).to.not.be.undefined;",
							"        });",
							"    } else {",
							"        console.error(\"建立成功但沒有回傳 ID？回應內容: \", jsonData);",
							"    }",
							"} else {",
							"    console.error(\"建立失敗，無法抓取 ID。Status Code: \" + pm.response.code);",
							"    console.error(\"錯誤原因: \" + (jsonData.error || \"未知\"));",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"Postman 自動測試\",\n  \"email\": \"postman_auto@o365.tku.edu.tw\",\n  \"phone\": \"0912345678\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/signup",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"signup"
					]
				},
				"description": "建立一筆新資料。email 使用 GUID 避免重複。"
			},
			"response": []
		},
		{
			"name": "2. 測試重複報名 (應失敗)",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"分身帳號\",\n  \"email\": \"postman_auto@o365.tku.edu.tw\",\n  \"phone\": \"0988888888\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/signup",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"signup"
					]
				},
				"description": "請先執行一次，第二次執行應回傳 409 Conflict。"
			},
			"response": []
		},
		{
			"name": "3. 取得所有清單",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/signup",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"signup"
					]
				}
			},
			"response": []
		},
		{
			"name": "4. 取得清單 (分頁測試)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/signup?page=1&limit=2",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"signup"
					],
					"query": [
						{
							"key": "page",
							"value": "1"
						},
						{
							"key": "limit",
							"value": "2"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "5. 更新資料 (使用變數)",
			"request": {
				"method": "PATCH",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"phone\": \"0900000000\",\n  \"status\": \"confirmed\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/signup/{{current_id}}",
                    "host": [
						"{{base_url}}"
					],
					"path": [
						"signup/{{current_id}}"
					]
				},
				"description": "自動使用步驟 1 產生的 ID 進行更新。"
			},
			"response": []
		},
		{
			"name": "6. 刪除資料 (使用變數)",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{base_url}}/signup/{{current_id}}",
                    "host": [
						"{{base_url}}"
					],
					"path": [
						"signup/{{current_id}}"
					]
				},
				"description": "自動使用步驟 1 產生的 ID 進行刪除。"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3001/api",
			"type": "string"
		},
		{
			"key": "current_id",
			"value": "",
			"type": "string"
		}
	]
}